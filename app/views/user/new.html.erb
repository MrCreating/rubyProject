<div class="text-center mt-3 fixed-top" style="right: 10px; top: 10px;">
  <%= link_to 'Русский', switch_locale_path(locale: 'ru'), class: 'text-muted' %> |
  <%= link_to 'English', switch_locale_path(locale: 'en'), class: 'text-muted' %>
</div>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh; background-color: #f5f5f5;">
  <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
    <div class="card-body">
      <h5 class="card-title text-center"><%= t('registration') %></h5>

      <div data-controller="registration">
        <div id="message"></div>

        <%= form_with(url: register_path, method: 'post', local: false, data: { controller: 'registration', action: 'submit->registration#submitForm' }) do |form| %>
          <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>

          <div class="form-group mb-3">
            <%= form.label :username, class: 'form-label' %>
            <%= form.text_field :username, class: 'form-control', required: true, placeholder: t('input_username') %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :email, class: 'form-label' %>
            <%= form.email_field :email, class: 'form-control', required: true, placeholder: t('input_email') %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :password, class: 'form-label' %>
            <%= form.password_field :password, class: 'form-control', required: true, placeholder: t('input_password') %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :confirmation_password, "Подтвердите пароль", class: 'form-label' %>
            <%= form.password_field :confirmation_password, class: 'form-control', required: true, placeholder: t('confirm_password') %>
          </div>

          <div class="form-group text-center">
            <%= form.submit t('input_registration'), class: 'btn btn-primary w-100' %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to t('already_have_account'), login_path, class: 'text-muted' %>
        </div>
      </div>
    </div>
  </div>
</div>